angular.module('myApp.directives', [])

  .directive 'langs', () ->
    restrict: 'E'
    scope:
      langs: '='
    templateUrl: "<%= asset_path 'assets/langs.html' %>"
    link: ($scope, $el, $attrs) ->
      _.each $scope.langs, (l) ->
        console.log l['lang_string'] + ' ' + l['points'] 


  .directive 'khan', () ->
    restrict: 'E'
    scope:
      khan: '='
    templateUrl: "<%= asset_path 'assets/khan.html' %>"
    link: ($scope, $el, $attrs) ->
      _.each $scope.khan, (k) ->
        console.log k