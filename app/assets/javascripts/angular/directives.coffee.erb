  .directive 'khan', () ->
    restrict: 'E'
    scope:
      khan: '='
    templateUrl: "<%= asset_path 'assets/khan.html' %>"
    link: ($scope, $el, $attrs) ->
      show_date = true
      $scope.check_date_change = (date) ->
        show_date = false
        if date != $scope.exercise_date
          show_date = true
          $scope.exercise_date = date
        show_date
        
      $scope.exercise_date = $scope.khan['exercises'][0]['date']
      console.log "!!!!"
      console.log $scope.exercise_date


